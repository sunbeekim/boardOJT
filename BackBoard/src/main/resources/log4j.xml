<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "https://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- 콘솔 출력 설정 -->
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%p] %d{yyyy-MM-dd HH:mm:ss} [%c] - %m%n"/>
    </layout>
  </appender>

  <!-- 파일 출력 설정 -->
  <appender name="file" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="logs/app.log"/>
    <param name="maxFileSize" value="10MB"/>
    <param name="maxBackupIndex" value="5"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%p] %d{yyyy-MM-dd HH:mm:ss} [%c] - %m%n"/>
    </layout>
  </appender>

  <!-- 루트 로거 설정 (INFO 레벨, 콘솔 + 파일 출력) -->
  <root>
    <priority value="INFO" />
    <appender-ref ref="console" />
    <appender-ref ref="file" />
  </root>

  <!-- 특정 패키지 로거 (예: com.board.service 패키지만 DEBUG 이상 출력) -->
  <logger name="com.board.service">
    <level value="DEBUG" />
  </logger>

  <logger name="com.board.exception">
    <level value="ERROR" />
  </logger>

  <logger name="org.springframework">
    <level value="WARN" />
  </logger>

  


</log4j:configuration>
